# NASA Earthdata Login Credentials
# Register at: https://urs.earthdata.nasa.gov/
EARTHDATA_USERNAME=your_username_here
EARTHDATA_PASSWORD=your_password_here

# API Configuration
FLASK_ENV=development
FLASK_DEBUG=True
API_PORT=5000

# Database (optional)
DATABASE_URL=sqlite:///bloomwatch.db

# Cache Settings
CACHE_DIR=./data/cache
MAX_CACHE_SIZE_GB=10

# Planetary Computer (optional - no authentication needed)
PC_SUBSCRIPTION_KEY=

# Map Settings
DEFAULT_LAT=36.778
DEFAULT_LON=-119.418
DEFAULT_ZOOM=8

# Analysis Parameters
NDVI_BLOOM_THRESHOLD=0.4
NDVI_CHANGE_THRESHOLD=0.2
ANALYSIS_WINDOW_DAYS=16

# Email Alerts (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
